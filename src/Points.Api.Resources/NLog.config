<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Debug" internalLogFile="c:\temp\nlog-internal.log" >


  <!-- optional, add some variabeles
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="layout" value="${longdate} [${threadid}] ${uppercase:${level}} ${message}"/>
  <variable name="appName" value="checkPoint" />
  <variable name="logLocation" value="${specialfolder:CommonApplicationData}\${appName}"/>

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target xsi:type="File" name="ResourceApi" fileName="${logLocation}\ResourceApi.${shortdate}.log"
            layout="${layout}" />
    <target xsi:type="File" name="Scheduler" fileName="${logLocation}\Scheduler.${shortdate}.log"
            layout="${layout}" />
    <!-- 
    add your targets here 
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <logger name="*Scheduler*" minlevel="Debug" writeTo="Scheduler" final="true" />
    <logger name="*" minlevel="Debug" writeTo="ResourceApi" />
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
  </rules>
</nlog>